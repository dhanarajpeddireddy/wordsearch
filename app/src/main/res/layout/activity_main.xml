<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:paddingTop="50dp"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:fontFamily="@font/uomobold"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <ImageView
            android:visibility="gone"
            android:background="@drawable/background_round"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_category_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:visibility="gone"
            android:padding="2dp"
            android:layout_gravity="end"
            android:background="@drawable/background_round"
            android:layout_marginEnd="8dp"
            android:src="@drawable/progression"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:ignore="RtlCompat" />



        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





        <ImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/circle"
            android:layout_width="140dp"
            android:layout_height="140dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_avathar"
                android:onClick="chooseAvathar"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="160dp"
                tools:ignore="ContentDescription" />


            <include
                android:id="@+id/ly_coin"
                layout="@layout/ly_coin"/>


            <include layout="@layout/ly_difficulty_chooser"/>


        </LinearLayout>





    </FrameLayout>

    </FrameLayout>

</layout>